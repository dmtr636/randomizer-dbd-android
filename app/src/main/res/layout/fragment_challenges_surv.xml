<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".ui.randomizer.KillerRandomizerFragment">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:srcCompat="@drawable/challenge_info_bg" />

    <ImageView
        android:id="@+id/killerChallengesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/survChallengesButton"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        app:srcCompat="@drawable/current_challeges_bg" />

    <ImageView
        android:id="@+id/survChallengesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@+id/killerChallengesButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1.3"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
        app:srcCompat="@drawable/challenges_bg" />

    <TextView
        android:id="@+id/survCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/open_sans_bold"
        android:letterSpacing="0.08"
        android:text="15 / 17"
        android:textColor="@color/link_text_color"
        android:textSize="21.3dp"
        app:layout_constraintEnd_toEndOf="@+id/survChallengesButton"
        app:layout_constraintStart_toStartOf="@+id/survChallengesButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/top_bar_bg"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/challenges_top_bar_icon" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:letterSpacing="0.08"
            android:text="@string/survs"
            android:textAllCaps="true"
            android:textColor="#fefefe"
            android:textSize="15.2dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/randomizeButton"
        android:layout_width="102dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/killerChallengesButton"
        app:srcCompat="@drawable/cube" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/challenge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/open_sans_extra_bold"
        android:letterSpacing="0.08"
        android:text="Инстинкт убийцы"
        android:textColor="#FFFFFF"
        android:textSize="16.7dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/challenge_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/open_sans_semi_bold"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="3.3dp"
        android:text="День игры на убийцах.  В течение дня играйте только  за убийц."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13.3dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/challenge_name" />

    <ImageView
        android:id="@+id/checkbox_bg"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:srcCompat="@drawable/checkbox" />

    <ImageView
        android:id="@+id/checkbox_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="@+id/checkbox_bg"
        app:layout_constraintTop_toTopOf="@+id/checkbox_bg"
        app:srcCompat="@drawable/checkbox_complete" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@+id/killerChallengesButton"
        app:layout_constraintStart_toStartOf="@+id/killerChallengesButton"
        app:layout_constraintTop_toTopOf="@+id/killerChallengesButton"
        app:srcCompat="@drawable/icon_killer" />

    <TextView
        android:id="@+id/killerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/open_sans_bold"
        android:letterSpacing="0.08"
        android:text="15 / 17"
        android:textColor="@color/link_text_color"
        android:textSize="13.3dp"
        app:layout_constraintEnd_toEndOf="@+id/killerChallengesButton"
        app:layout_constraintStart_toStartOf="@+id/killerChallengesButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@+id/survChallengesButton"
        app:layout_constraintStart_toStartOf="@+id/survChallengesButton"
        app:layout_constraintTop_toTopOf="@+id/survChallengesButton"
        app:srcCompat="@drawable/icon_surv" />


</androidx.constraintlayout.widget.ConstraintLayout>