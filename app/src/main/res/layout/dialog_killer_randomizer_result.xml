<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_randomizer_bg">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_killer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="90dp"
            android:layout_height="128dp"
            android:padding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/item_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/char_icon_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/character_bg" />

            <ImageView
                android:id="@+id/char_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/char_icon_1" />

            <ImageView
                android:id="@+id/char_icon_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/char_icon_border" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toStartOf="@+id/addon_icon1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            app:srcCompat="@drawable/fulliconpowers_gasbomb" />

        <ImageView
            android:id="@+id/addon_icon1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon"
            app:layout_constraintEnd_toStartOf="@+id/addon_icon2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_icon"
            app:layout_constraintTop_toTopOf="@+id/item_icon"
            app:srcCompat="@drawable/fulliconaddon_spearhead" />

        <ImageView
            android:id="@+id/addon_icon2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="@+id/addon_icon1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/addon_icon1"
            app:layout_constraintTop_toTopOf="@+id/addon_icon1"
            app:srcCompat="@drawable/fulliconaddon_bloodysash" />

        <ImageView
            android:id="@+id/perk_icon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/perk_icon_bg"
            app:layout_constraintEnd_toStartOf="@+id/perk_icon2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:srcCompat="@drawable/iconperks_aceinthehole" />

        <ImageView
            android:id="@+id/perk_icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/perk_icon_bg"
            app:layout_constraintEnd_toStartOf="@+id/perk_icon3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/perk_icon1"
            app:layout_constraintTop_toTopOf="@+id/perk_icon3"
            app:srcCompat="@drawable/iconperks_aceinthehole" />

        <ImageView
            android:id="@+id/perk_icon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/perk_icon_bg"
            app:layout_constraintEnd_toStartOf="@+id/perk_icon4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/perk_icon2"
            app:layout_constraintTop_toTopOf="@+id/perk_icon4"
            app:srcCompat="@drawable/iconperks_aceinthehole" />

        <ImageView
            android:id="@+id/perk_icon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/perk_icon_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/perk_icon3"
            app:layout_constraintTop_toTopOf="@+id/perk_icon1"
            app:srcCompat="@drawable/iconperks_aceinthehole" />

        <TextView
            android:id="@+id/perk_text1"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Порча: никому не скрыться от смерти"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="7dp"
            app:layout_constraintEnd_toEndOf="@+id/perk_icon1"
            app:layout_constraintStart_toStartOf="@+id/perk_icon1"
            app:layout_constraintTop_toBottomOf="@+id/perk_icon1" />

        <TextView
            android:id="@+id/perk_text2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Порча: никому не скрыться от смерти"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="7dp"
            app:layout_constraintEnd_toEndOf="@+id/perk_icon2"
            app:layout_constraintStart_toStartOf="@+id/perk_icon2"
            app:layout_constraintTop_toBottomOf="@+id/perk_icon1" />

        <TextView
            android:id="@+id/perk_text3"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Порча: никому не скрыться от смерти"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="7dp"
            app:layout_constraintEnd_toEndOf="@+id/perk_icon3"
            app:layout_constraintStart_toStartOf="@+id/perk_icon3"
            app:layout_constraintTop_toBottomOf="@+id/perk_icon1" />

        <TextView
            android:id="@+id/perk_text4"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Порча: никому не скрыться от смерти"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="7dp"
            app:layout_constraintEnd_toEndOf="@+id/perk_icon4"
            app:layout_constraintStart_toStartOf="@+id/perk_icon4"
            app:layout_constraintTop_toBottomOf="@+id/perk_icon1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>