<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DBDHelperBeta" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:navigationBarColor">
            @android:color/black
        </item>

        <item name="android:statusBarColor">
            @android:color/black
        </item>

        <item name="popupMenuBackground">@drawable/top_bar_bg_shadowless</item>
        <item name="android:itemTextAppearance">@style/CustomTextMenu</item>
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.DBDHelperBeta.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="StatsTabText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/open_sans_extra_bold</item>
        <item name="android:letterSpacing">0.08</item>
    </style>


    <style name="Theme.DBDHelperBeta.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DBDHelperBeta.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>